<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FAFAFA"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mike's Vintage Guitars"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp" />

    <HorizontalScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/black1"
                android:layout_width="280dp"
                android:layout_height="500dp"
                android:orientation="vertical"
                android:background="#E0E0E0"
                android:padding="12dp"
                android:layout_marginEnd="16dp"
                android:alpha="1">

                <ImageView
                    android:id="@+id/imageBlack1"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/black1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fender John Mayer 'Black1' Stratocaster"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />

                <RatingBar
                    android:id="@+id/ratingBlack1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.8"
                    android:stepSize="0.1" />

                <Button
                    android:id="@+id/borrowBlack1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Borrow"
                    android:backgroundTint="#3F51B5"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cory"
                android:layout_width="280dp"
                android:layout_height="500dp"
                android:orientation="vertical"
                android:background="#E0E0E0"
                android:padding="12dp"
                android:layout_marginEnd="16dp"
                android:alpha="0.4">

                <ImageView
                    android:id="@+id/imageCory"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cory" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cory Wong Stratocaster"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />

                <RatingBar
                    android:id="@+id/ratingCory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="5"
                    android:stepSize="0.1" />

                <Button
                    android:id="@+id/borrowCory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Borrow"
                    android:backgroundTint="#3F51B5"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/srv"
                android:layout_width="280dp"
                android:layout_height="500dp"
                android:orientation="vertical"
                android:background="#E0E0E0"
                android:padding="12dp"
                android:layout_marginEnd="16dp"
                android:alpha="0.4">

                <ImageView
                    android:id="@+id/imageSrv"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/srv" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SRV Stratocaster"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />

                <RatingBar
                    android:id="@+id/ratingSrv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="5"
                    android:stepSize="0.1" />

                <Button
                    android:id="@+id/borrowSrv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Borrow"
                    android:backgroundTint="#3F51B5"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/govan"
                android:layout_width="280dp"
                android:layout_height="500dp"
                android:orientation="vertical"
                android:background="#E0E0E0"
                android:padding="12dp"
                android:alpha="0.4">

                <ImageView
                    android:id="@+id/imageGovan"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/govan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Charvel Guthrie Govan Signature HSH Flame Maple"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />

                <RatingBar
                    android:id="@+id/ratingGovan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.9"
                    android:stepSize="0.1" />

                <Button
                    android:id="@+id/borrowGovan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Borrow"
                    android:backgroundTint="#3F51B5"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
