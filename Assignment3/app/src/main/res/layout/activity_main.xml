<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#061626">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mikeâ€™s Instrument Tuner"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/jersey25_regular"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/noteLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note:"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/jersey25_regular"
        android:textSize="33sp"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/bigNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="170sp"
        android:fontFamily="@font/jersey25_regular"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/noteLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cents:"
        android:fontFamily="@font/jersey25_regular"
        android:textColor="#FFFFFF"
        android:textSize="33sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/bigNote"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/centsVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jersey25_regular"
        android:textColor="#FFFFFF"
        android:textSize="33sp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/bigNote"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/pitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pitch:"
        android:fontFamily="@font/jersey25_regular"
        android:textColor="#FFFFFF"
        android:textSize="33sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/cents"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pitchVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jersey25_regular"
        android:textColor="#FFFFFF"
        android:textSize="33sp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/cents"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/rvContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/pitchVal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvStrings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:overScrollMode="never" />
    </FrameLayout>

    <TextView
        android:id="@+id/tuningDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="loading..."
        android:textColor="#E6FFFFFF"
        android:textSize="33sp"
        android:fontFamily="@font/jersey25_regular"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/rvContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/changeTuningDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Tuning:"
        android:textColor="#E6FFFFFF"
        android:textSize="25sp"
        android:fontFamily="@font/jersey25_regular"
        app:layout_constraintTop_toBottomOf="@id/tuningDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/accessoriesChipGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:singleSelection="true"
        app:layout_constraintTop_toBottomOf="@id/changeTuningDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnGuide"
        android:layout_width="187dp"
        android:layout_height="46dp"
        android:layout_marginTop="170dp"
        android:fontFamily="@font/jersey25_regular"
        android:text="How to Tune"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:backgroundTint="#71788f"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tuningDesc" />

</androidx.constraintlayout.widget.ConstraintLayout>
