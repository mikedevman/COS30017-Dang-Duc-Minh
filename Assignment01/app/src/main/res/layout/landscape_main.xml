<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_landscape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/background2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bouldering Score Counter"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tileScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Score"
                    android:textColor="@android:color/white"
                    android:textSize="48sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/scoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="42sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/holdTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hold: "
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/holdText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/startStopBtn"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#2196F3"
                    android:text="START SESSION"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="87dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/langLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change to Vietnamese"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/switchLangBtn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/vn_rounded"
                        app:srcCompat="@drawable/vn_flag" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/climbBtn"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:backgroundTint="#1B5E20"
                    android:gravity="center"
                    android:text="↑\nClimb"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    app:cornerRadius="5dp"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/fallBtn"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:backgroundTint="#8B0000"
                    android:gravity="center"
                    android:text="↓\nFall"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    app:cornerRadius="5dp"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/resetBtn"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:backgroundTint="#333333"
                    android:gravity="center"
                    android:text="Reset"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    app:cornerRadius="5dp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>